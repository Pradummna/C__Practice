// Note: There are two approaches given for the solution
#include<stdio.h>
int pyramidStar(int n);
int main() {
    int rows;
    printf("Enter the rows: ");
    scanf("%d", &rows);
    pyramidStar(rows);
    return 0;
}

int pyramidStar(int n) {
    for(int i=1; i<=n; i++) {
        for(int spc=n; spc>=i; spc--) {
            printf(" ");
        }
        for(int j=1; j<=2*i-1; j++) {
            if(j==1|| j==2*i-1 || i==n) {
             printf("*");
            } else {
                printf(" ");
            }
        } printf("\n");
    }
}

// method 2
#include<stdio.h>
int main() {
  int n, i, j, spc;
  printf("Enter the term: ");
  scanf("%d", &n);

  for(i=0; i<=n-1; i++) { 
    for(spc=1; spc<n-i; spc++) {
      printf(" ");
    }
    for(j=0; j<=2*i; j++) { 
      if(j==0 || j == 2*i) {
        printf("*");
      } else {
        printf(" ");
      } 
    } printf("\n");
  } 
  
  for(j=0; j<2*n-1; j++) {
    printf("*");
  }
  return 0;
}
