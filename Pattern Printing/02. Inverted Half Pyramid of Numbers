#include<stdio.h>
int invertedHalfPattern(int n);

int main() {
    int rows;
    printf("Enter the number of rows: ");
    scanf("%d",&rows);
    invertedHalfPattern(rows);
    return 0;
}

int invertedHalfPattern(int n) {
    for(int i=n; i>=1; i--) {
        for(int j=1; j<=i; j++) {
            printf("%d",i);
        } printf("\n");
    }
}
