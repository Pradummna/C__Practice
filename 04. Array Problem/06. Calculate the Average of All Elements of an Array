#include<stdio.h>
int main() {
    int arr[] = {12, 14, 16, 22};
    int size = sizeof(arr) / sizeof(arr[0]);
    int sum = 0, avg;
    for(int i=0; i<=size; i++) {
        sum += arr[i];
    } printf("Sum = %d\n", sum);
    avg = sum / size;
    printf("Average %d / %d = %d",sum, size, avg);
    return 0;
}
