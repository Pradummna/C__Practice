//  Half Pyramid Pattern of Numbers
#include<stdio.h>
int halfPattern(int n);
int main() {
    int rows;
    printf("Enter the number of rows: ");
    scanf("%d",&rows);
    halfPattern(rows);
    return 0;
}

int halfPattern(int n) {
    for(int i=1; i<=n; i++) {
        for(int j=1; j<=i; j++) {
            printf("%d",i);
        } printf("\n");
    }
}
